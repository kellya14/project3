#!/bin/bash
#Project 3 CIT470
#Austin Kelly, Kasey Cottier, Randy Clark, Chris Pischl, and Zoey Koza
#Tests Server Monit Configuration

echo "Installing required packages..." &&
yum -y install stress &&
echo "Packages installed." &&

#Kill SSH
kill_ssh () {
echo "Testing SSH..."
systemctl stop sshd
sleep 120
monit summary | grep ssh
}

#Kill syslog
kill_syslog () {
echo "Testing syslog..."
systemctl stop rsyslog
sleep 120
monit summary | grep rsyslog
}

#Kill NFS-Server
kill_nfs () {
echo "Testing NFS client..."
systemctl stop nfs
sleep 120
monit summary | grep nfs
echo "NFS-Server testing complete!"
}

#Kill LDAP-Server
kill_ldap () {
echo "Testing LDAP server..."
systemctl stop slapd
sleep 120
monit summary | grep slapd
echo "LDAP-Server testing complete!"
}

#Overload CPU and MEM with stress tool
overload_cpu () {
echo "Testing CPU and memory usage..."
stress --vm-bytes 256MB --cpu 100 --timeout 60s >& 1 >> /var/log/server-test.log
monit summary | grep localhost
echo "CPU and MEM testing complete!"
}

#Test hard drive alarm
test_hard_drive () {
echo "Testing disk usage.."
dd if=/dev/zero of=/dev/diskhog bs=1M count=100000 >& 1 >> /var/log/server-test.log
sleep 60
monit summary | grep Home
monit summary | grep Root
monit summary | grep Var
rm /dev/diskhog -f >& 1 >> /var/log/server-test.log
echo "Disk usage testing complete!"
}

kill_ssh
kill_syslog
kill_nfs
kill_ldap
overload_cpu
test_hard_drive
